<div id="dwellers" ng-controller="dwellersCtrl">
  <input id="sav_file" type="file" class="file" title="Choose .sav file" data-filename-placement="inside"></input>

  <table id="dwellers-table" datatable="ng" dt-options="dtOptions" class="row-border hover">
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Last Name</th>
      <th>Level</th>
      <th>Max Health</th>
      <th>Happiness</th>
      <th>Pet</th>
      <th></th>
    </thead>
    <tbody>
      <tr ng-repeat="dweller in dwellers track by dweller.serializeId">
        <td>{{ dweller.serializeId }}</td>
        <td>{{ dweller.name }}</td>
        <td>{{ dweller.lastName }}</td>
        <td>{{ dweller.experience.currentLevel }}</td>
        <td>{{ dweller.health.maxHealth }}</td>
        <td>{{ dweller.happiness.happinessValue }}</td>
        <td>{{ petInfo(dweller) }}</td>
        <td>
          <a href="" ng-click="editDweller(dweller)">Edit</a>&nbsp;
          <a href="" ng-click="deleteDweller(dweller)">Delete</a>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="col-sm-12">
    <div class="form-group">
      <button class="btn btn-success" ng-click="newDweller()">Add Dweller</button>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="form-group">
      <input id="filename" class="form-control" type="text" ng-model="fileName" placeholder="Filename">
    </div>
    <button class="btn btn-success" ng-click="saveShelter()">Save</button>
  </div>
</div>
